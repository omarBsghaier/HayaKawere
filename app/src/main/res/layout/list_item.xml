<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
   >


    <RelativeLayout
        android:id="@+id/partie1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp">

        <ImageView
            android:id="@+id/im_terrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/image" />

        <TextView
            android:id="@+id/titre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/im_terrain"
            android:fontFamily="@font/poppins_light"
            android:text="Maracana"
            android:textColor="@color/black" />

        <RatingBar
            android:id="@+id/rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titre"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="-5dp"
            android:layout_toRightOf="@id/im_terrain"
            android:numStars="5"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            android:rating="4.5"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:stepSize="0.5"
            android:progressBackgroundTint="@color/stars_button"
            android:progressTint="@color/Amberlight"

            />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rb"
            android:layout_toRightOf="@id/im_terrain"
            android:fontFamily="@font/poppins_light"
            android:text="TextView"
            android:textColor="@color/black" />


        <Button
            android:id="@+id/bt_reserver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/bt_voirplus"
            android:text="reserver"
            android:textColor="@color/white"
            android:background="@drawable/bt_reserver"/>

        <Button
            android:id="@+id/bt_voirplus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="voir plus"
            android:background="@drawable/bt_voirplus"
            android:textColor="@color/Amberlight"/>
    </RelativeLayout>




    <LinearLayout
        android:layout_below="@+id/partie1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="3"
        android:background="@drawable/rounded_edittext">

        <TextView
            android:id="@+id/localisation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:textSize="10dp"
            android:text="Ezzahra,Ben Arous"
            />

        <TextView
            android:id="@+id/nbjoueurs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:layout_gravity="center_vertical"
            android:text="12 joueures"
            />

        <TextView
            android:id="@+id/heures"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:textSize="10dp"
            android:text="heures et 30 minutes "
           />

    </LinearLayout>

</RelativeLayout>