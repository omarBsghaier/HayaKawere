<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/succes"
        android:layout_centerHorizontal="true"
        android:layout_width="162dp"
        android:layout_height="131dp"
        android:src="@drawable/succes" />

    <TextView
        android:id="@+id/textsucces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/succes"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/textsucces"
        android:textAllCaps="false"
        android:textSize="14dp"
        android:textColor="@color/black"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textsucces"
        android:textAllCaps="false"
        android:text="OK"
        android:textColor="@color/black"
        android:background="@drawable/rounded_buttonlight"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="15dp"
        />

</RelativeLayout>